{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}
{% block header %}{{ parent() }}{% endblock %}
{% block content %}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Ecommerce</h1>
        <p class="lead text-muted mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Harum delectus ad quae cumque voluptates dolorum, neque eveniet, placeat obcaecati magnam vel fugit nulla autem, mollitia consequuntur praesentium sit? Veniam, facere.</p>
    </div>
</section>
<div class="container">
    <div class="row">
        <div class="col">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{% if productRand1.image %}{{ asset('img/'~productRand1.image) }}{% else %}https://dummyimage.com/855x365/55595c/fff{% endif %}" alt="First Slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{% if productRand2.image %}{{ asset('img/'~productRand2.image) }}{% else %}https://dummyimage.com/855x365/55595c/fff{% endif %}" alt="Second Slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{% if productRand3.image %}{{ asset('img/'~productRand3.image) }}{% else %}https://dummyimage.com/855x365/55595c/fff{% endif %}" alt="Third Slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-header bg-success text-white text-uppercase">
                    <i class="fa fa-heart"></i> Coup de coeur
                </div>
                <img class="img-fluid border-0" src="{% if productRandHeart.image %}{{ asset('img/'~productRandHeart.image) }}{% else %}https://dummyimage.com/600x400/55595c/fff{% endif %}" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title text-center"><a href="{{ path('see_product',{slug: productRandHeart.slug}) }}" title="View Product">{{ productRandHeart.name }}</a></h4>
                    <div class="row">
                        <div class="col">
                            <p class="btn btn-danger btn-block">{% if productRandHeart.discount %}{{ productRandHeart.price * (100 - productRandHeart.discount) // 100 }} &euro;{% else %}{{ productRandHeart.price }} &euro;{% endif %}</p>
                        </div>
                        <div class="col">
                            <a href="{{ path('see_product',{slug: productRandHeart.slug}) }}" class="btn btn-success btn-block">Voir</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-3">
    <div class="row">
        <div class="col-sm">
            <div class="card">
                <div class="card-header bg-primary text-white text-uppercase">
                    <i class="fa fa-star"></i> Derniers produits
                </div>
                <div class="card-body">
                    <div class="row">
                        {% for productLatest in productsLatest %}
                            
                        <div class="col-sm">
                            <div class="card">
                                <img class="card-img-top" src="{% if productLatest.image %}{{ asset('img/'~productLatest.image) }}{% else %}https://dummyimage.com/600x400/55595c/fff{% endif %}" alt="Card image cap">
                                <div class="card-body">
                                    <h4 class="card-title"><a href="{{ path('see_product',{slug: productLatest.slug}) }}" title="View Product">{{ productLatest.name }}</a></h4>
                                    <p class="card-text">{{ productLatest.description }}</p>
                                    <div class="row">
                                        <div class="col">
                                            <p class="btn btn-danger btn-block">{% if productLatest.discount %}{{ productLatest.price * (100 - productLatest.discount) // 100 }} &euro;{% else %}{{ productLatest.price }} &euro;{% endif %}</p>
                                        </div>
                                        <div class="col">
                                            <a href="cart.html" class="btn btn-success btn-block">Ajouter au panier</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block footer %}{{ parent() }}{% endblock %}
{% endblock %}
